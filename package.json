    "@aws-sdk/types": "^3.567.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.11",
    "@types/sinon": "^17.0.3",
    "chai": "^5.1.0",
    "mocha": "^10.4.0",
    "sinon": "^17.0.2",
    "typescript": "^5.4.5"
  }
}
